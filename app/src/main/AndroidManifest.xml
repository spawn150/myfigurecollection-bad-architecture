<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.architecture.bad.myfigurecollection">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".figures.FiguresActivity"
            android:label="@string/title_activity_figures"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".bestpictures.BestPicturesActivity"
            android:label="@string/title_activity_best_pictures"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".figuredetail.FigureDetailActivity"
            android:label="@string/title_activity_figure_detail"
            android:parentActivityName=".figures.FiguresActivity"
            android:theme="@style/AppTheme.Detail">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.architecture.bad.myfigurecollection.figures.FiguresActivity" />
        </activity>
    </application>

</manifest>