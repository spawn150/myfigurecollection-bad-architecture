<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Text Styles -->
    <style name="CardView.AppTextAppearance" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/font_medium_size</item>
    </style>

    <style name="Base.Titles" parent="android:Widget.TextView">
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CardView.Titles" parent="Base.Titles">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/medium_padding</item>
        <item name="android:paddingBottom">@dimen/medium_padding</item>
        <item name="android:paddingStart">@dimen/small_padding</item>
        <item name="android:paddingEnd">@dimen/small_padding</item>
        <item name="android:textAppearance">@style/CardView.AppTextAppearance</item>
    </style>

    <style name="Detail.Titles" parent="Base.Titles">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Base.Labels" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/lightGrey</item>
        <item name="android:textSize">@dimen/font_small_size</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Base.Contents" parent="android:Widget.TextView">
        <item name="android:singleLine">false</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/font_large_size</item>
    </style>

    <style name="Base.Gallery" parent="android:Widget.TextView">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/default_margin</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Base.Gallery.Titles" parent="Base.Gallery">
        <item name="android:textSize">@dimen/font_xlarge_size</item>
    </style>

    <style name="Base.Gallery.Contents" parent="Base.Gallery">
        <item name="android:textSize">@dimen/font_large_size</item>
        <item name="android:layout_marginBottom">@dimen/default_xs_margin</item>
    </style>

    <style name="Base.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:layout_margin">@dimen/small_margin</item>
    </style>

    <style name="Base.Button.Transparent" parent="Base.Button">
        <item name="android:background">@drawable/button_transparent</item>
    </style>

    <style name="Button.Hyperlink" parent="Base.Button.Transparent">
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@drawable/button_text_type</item>
    </style>

</resources>
