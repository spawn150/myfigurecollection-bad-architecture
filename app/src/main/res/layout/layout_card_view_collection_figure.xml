<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_collection_figure"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_figure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@string/content_description"
            android:transitionName="@string/transition_detail"
            android:scaleType="centerCrop"
            tools:background="@drawable/test_buggy" />

        <TextView
            android:id="@+id/text_view_figure_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/CardView.Titles"
            tools:text="Buggy the Clown" />

    </LinearLayout>

</android.support.v7.widget.CardView>
