<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_flipper_figures"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.architecture.bad.myfigurecollection.figures.FiguresFragment">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:visibility="invisible" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_collection_figures"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/layout_card_view_collection_figure"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/text_view_error_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/xlarge_margin"
        android:drawableTop="@drawable/ic_tsuko_bn"
        android:gravity="center"
        android:textSize="16sp"
        android:paddingBottom="@dimen/xlarge_padding"
        tools:text="Errore!" />

</ViewFlipper>
