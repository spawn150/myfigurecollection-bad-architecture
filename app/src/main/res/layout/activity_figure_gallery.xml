<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.architecture.bad.myfigurecollection.figuregallery.FigureGalleryActivity">

    <FrameLayout
        android:id="@+id/fragment_figure_gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sheet_text_scrim_height_top"
        android:background="@drawable/scrim_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_button_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:src="@drawable/button_clear" />

        <TextView
            android:id="@+id/text_view_gallery_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Base.Gallery.Titles"
            tools:text="12 of 27"/>

    </LinearLayout>
</FrameLayout>
